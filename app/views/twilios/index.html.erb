<center>Welcome to Twilio </center>
<div id="main-div">
  <%= form_tag verify_phone_twilios_path, remote: true, id: 'verify_mobile', class: 'form-horizontal' do  %>
    <div class="form-group">
      <div class="col-sm-9">
        <%= text_field_tag :phone_no, '', class:'form-control', placeholder: 'Enter Your mobile number' %>
      </div>
    </div>
    <div class="form-group">
      <div class="  col-sm-offset-3 col-sm-9">
        <%= content_tag :button, :type => :submit, class: 'btn btn-success' do %>
          Submit
        <%end%>
      </div>
    </div>
  <%end%>
</div>